@{
    Layout = null; // No layout for iframe content
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nested Frame Content</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
</head>
<body style="background-color: #fff3cd;">
    <div class="p-3" data-automation-id="nested-frame-content">
        <div class="card border-warning">
            <div class="card-body">
                <h6><i class="bi bi-layers-fill"></i> Nested Frame Level 2</h6>
                <p class="small text-muted">You are now inside a nested iFrame</p>
                
                <div class="mb-3">
                    <label for="nested-input" class="form-label">Nested Frame Input:</label>
                    <input type="text" 
                           class="form-control form-control-sm" 
                           id="nested-input" 
                           data-automation-id="nested-frame-input"
                           placeholder="Type in nested frame">
                </div>
                
                <button class="btn btn-sm btn-warning" 
                        id="nested-button" 
                        data-automation-id="nested-frame-button"
                        onclick="handleNestedClick()">
                    <i class="bi bi-check-circle"></i> Click Me (Nested Frame)
                </button>
                
                <div class="mt-2 alert alert-warning d-none py-2" 
                     id="nested-result" 
                     data-automation-id="nested-frame-result"
                     role="alert">
                </div>
            </div>
        </div>
    </div>

    <script>
        function handleNestedClick() {
            const input = document.getElementById('nested-input');
            const result = document.getElementById('nested-result');
            
            result.classList.remove('d-none');
            result.innerHTML = `<strong>Nested frame button clicked!</strong><br>
                               <small>Input value: ${input.value || '(empty)'}</small><br>
                               <small>Timestamp: ${new Date().toLocaleTimeString()}</small>`;
        }
    </script>
</body>
</html>
