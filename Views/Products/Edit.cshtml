@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
    var categories = ViewData["Categories"] as string[] ?? Array.Empty<string>();
}

<div class="row justify-content-center" data-automation-id="edit-product-page">
    <div class="col-md-8 col-lg-6">
        <nav aria-label="breadcrumb" data-automation-id="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" data-automation-id="breadcrumb-products">Products</a></li>
                <li class="breadcrumb-item active" data-automation-id="breadcrumb-edit">Edit</li>
            </ol>
        </nav>

        <div class="card shadow" data-automation-id="edit-product-card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0" data-automation-id="edit-product-title">Edit Product</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" data-automation-id="edit-product-form">
                    <input type="hidden" asp-for="Id" data-automation-id="product-id-hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" data-automation-id="validation-summary"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label" data-automation-id="name-label">Product Name *</label>
                        <input asp-for="Name" class="form-control" data-automation-id="name-input" />
                        <span asp-validation-for="Name" class="text-danger" data-automation-id="name-validation"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label" data-automation-id="description-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" data-automation-id="description-input"></textarea>
                        <span asp-validation-for="Description" class="text-danger" data-automation-id="description-validation"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label" data-automation-id="price-label">Price *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" 
                                       data-automation-id="price-input" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger" data-automation-id="price-validation"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Category" class="form-label" data-automation-id="category-label">Category *</label>
                            <select asp-for="Category" class="form-select" data-automation-id="category-select">
                                <option value="">Select a category</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                            <span asp-validation-for="Category" class="text-danger" data-automation-id="category-validation"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StockQuantity" class="form-label" data-automation-id="stock-label">Stock Quantity</label>
                            <input asp-for="StockQuantity" class="form-control" type="number" min="0" 
                                   data-automation-id="stock-input" />
                            <span asp-validation-for="StockQuantity" class="text-danger" data-automation-id="stock-validation"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ImageUrl" class="form-label" data-automation-id="image-url-label">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" type="url" data-automation-id="image-url-input" />
                            <span asp-validation-for="ImageUrl" class="text-danger" data-automation-id="image-url-validation"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" data-automation-id="is-active-checkbox" />
                        <label asp-for="IsActive" class="form-check-label" data-automation-id="is-active-label">
                            Product is active and available for purchase
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" data-automation-id="save-btn">
                            Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary" data-automation-id="cancel-btn">
                            Cancel
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger ms-auto" 
                           data-automation-id="delete-btn">
                            Delete
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
